<Window x:Class="wpf_Konuk_Ivan_Mihailovich.Windows.AdmMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_Konuk_Ivan_Mihailovich.Windows"
        mc:Ignorable="d"
        Title="AdmMenu" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="admDg" AutoGenerateColumns="False" ItemsSource="{Binding Source=User}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID:" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Почта:" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Пароль:" Binding="{Binding Password}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
